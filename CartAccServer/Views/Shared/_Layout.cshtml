<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom border-warning rounded-lg shadow-lg">
            <span class="text-white font-weight-bold">Учет картриджей - Администрирование.</span>
            <div class="container align-items-center">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Administration" asp-action="Statistic">Статистика</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Administration" asp-action="UploadUpdate">Загрузка обновлений</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Administration" asp-action="SendMessage">Отправить сообщение</a>
                    </li>
                </ul>
            </div>
            <span class="text-white font-weight-bold">Пользователь - @User.Identity.Name</span>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="my-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white top-corner-radius align-text-bottom fixed-bottom">
        <p class="text-center pt-2">Андрей Казаков, 2020 - Учет картриджей. <a class="text-warning" href="https://site.ru/">Название компании</a></p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
